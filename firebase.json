{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
           "key": "Server",
           "value": "Microsoft-IIS/10.0"
          },
          {
           "key": "X-Frame-Options",
           "value": "SAMEORIGIN"
          },
          {
           "key": "X-Content-Type-Options",
           "value": "nosniff"
          },
          {
           "key": "Referrer-Policy",
           "value": "same-origin"
          },
          {
           "key": "X-XSS-Protection",
           "value": "1; mode=block"
          }
        ]
      }
    ]
  }
}
